<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEjemplo.EarthC137Page"
             Title="EarthC137Page">
    <ListView x:Name="listaEarthC137">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="10,5">
                        <Image Source="{Binding Image}" WidthRequest="50" HeightRequest="50" Aspect="AspectFit" />
                        <StackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold" />
                            <Label Text="{Binding Species}" FontSize="Small" TextColor="Gray" />
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>